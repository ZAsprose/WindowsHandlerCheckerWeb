@{
    ViewBag.Title = "Home Page";
}

@model List<WebApplication1.Models.WindowsInfo>


<div>
    Target Window Handle:
    <input id="hwnd" />
</div>
<div>
    <button onclick="getHandle()">Fetch Window Handle to pages</button>
    <script>
        function getHandle() {
            console.log("getHandle + " + document.getElementById("hwnd").value);
            $.ajax({
                url: '@Url.Action("getHandle", "Home")',
                type: 'POST',
                data: { hWnd: document.getElementById("hwnd").value },
                success: function (result) {

                },
                error: function (xhr, status, error) {

                }
            });
        }
    </script>    
</div>
<div>
    <table>
        <thead>
            <tr>
                <td>Handle</td>
                <td>Title</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Handle.ToString()</td>
                    <td>@item.Title</td>
                </tr>
            }
        </tbody>
    </table>
</div>

